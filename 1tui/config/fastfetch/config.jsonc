{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/logo.txt",
    // "type": "small",
    "color": { "1": "white" },
    "type": "auto",
    "padding": {
      "top": 1,
      "right": 3,
    },
  },
  "display": {
    "separator": "  ",
    "color": {
      "separator": "blue",
    },
  },
  "modules": [
    "break",
    {
      "type": "os",
      "key": "OS  ",
      "keyColor": "31", // = color1
    },
    {
      "type": "kernel",
      "key": "KER ",
      "keyColor": "32",
    },
    {
      "type": "packages",
      "format": "{} (nixos)",
      "key": "PKG 󰊠",
      "keyColor": "33",
    },
    {
      "type": "shell",
      "key": "SH  ",
      "keyColor": "34",
    },
    {
      "type": "terminal",
      "key": "TER 󰄛",
      "keyColor": "35",
    },
    {
      "type": "wm",
      "key": "WM  ",
      "keyColor": "36",
    },
    {
      "type": "uptime",
      "key": "UT  󱄔",
      "keyColor": "37",
    },
    {
      "type": "colors",
      "symbol": "square",
      "paddingLeft": 0,
    },
  ],
}
