###########
# y (select for copy) and P to paste soft-link
# d (select for cut) and P to paste hard-link
cmd link %{{
    set -- $(cat ~/.local/share/lf/files)
    mode="$1"
    shift
    if [ "$#" -lt 1 ]; then
        lf -remote "send $id echo no files to link"
        exit 0
    fi
    case "$mode" in
        # symbolically copy mode is indicating a soft link
        copy) ln -sf -t . -- "$@";;
        # while a move mode is indicating a hard link
        move) ln -t . -- "$@";;
    esac
    rm ~/.local/share/lf/files
    lf -remote "send clear"
}}
cmd slink ${{
    src=$(cat ~/.local/share/lf/files)
    src=$(echo $src|choose 1)
    if [[ -z $src ]]; then
      lf -remote "send $id echo No file selected"
      exit 0
    fi
    fname=$(basename $src)
    tar="$PWD/$fname"
    sudo ln -sf $src $tar
    echo "link created:$tar->$src"
}}
map asl :slink
########### repeat last cmd
map zpp :read; cmd-history-prev; cmd-enter
########### fzf
cmd fzf_jump ${{
    res="$(find . -maxdepth 1 | fzf  --reverse --header='Jump to location')"
    if [ -n "$res" ]; then
        if [ -d "$res" ]; then
            cmd="cd"
        else
            cmd="select"
        fi
        res="$(printf '%s' "$res" | sed 's/\\/\\\\/g;s/"/\\"/g')"
        lf -remote "send $id $cmd \"$res\""
    fi
}}
map <c-f> :fzf_jump
###########eza
cmd on-select &{{
    lf -remote "send $id set statfmt \"[ZAGS]$(eza -ld --color=always "$f")\""
}}
